<RangeDatepicker
    @onSelect={{this.changeDate}}
    @selected={{@dateRange}}
    @renderInPlace={{true}}
  as |dp|
>
  <dp.Trigger>
    <FaIcon @icon="calendar-alt" @prefix="far" />
  </dp.Trigger>
  <dp.Content>
    <div class="date-picker-content">
      {{dp.Nav}}
      {{dp.Days}}
    </div>
  </dp.Content>
</RangeDatepicker>
